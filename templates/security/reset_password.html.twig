{% extends 'layouts/security.html.twig' %}

{% block title %}Dashboard | Mot de passe oubli√©
{% endblock %}

{% block body %}

	<section class="bg-gray-50">
		<div class="flex flex-col items-center justify-center px-6 py-8 mx-auto md:h-screen lg:py-0">
			<a href="#" class="flex items-center mb-6 text-2xl font-semibold text-gray-900">
				<img class="w-32 mr-2" src="{{ asset('build/images/logo.svg') }}" alt="logo">
			</a>
			<div class="w-full bg-white rounded-lg shadow md:mt-0 sm:max-w-md xl:p-0">
				<div class="p-6 space-y-4 md:space-y-6 sm:p-8">
					<h1 class="text-xl font-bold leading-tight tracking-tight text-gray-900 md:text-2xl">
						Changer votre mot de passe.
					</h1>

                    {{ form_start(passwordForm, { 'attr' : { 'class': 'space-y-4 md:space-y-6' } })}}
						{% include '_partials/alert.html.twig' %}

						{{ form_row(passwordForm.password)}}

						<button type="submit" class="w-full text-white bg-rose-600 hover:bg-rose-700 focus:ring-4 focus:outline-none focus:ring-rose-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center">Modifier mon mot de passe</button>
					{{ form_end(passwordForm)}}
				</div>
			</div>
		</div>
	</section>
{% endblock %}
