{% extends 'layouts/dashboard.html.twig' %}

{% block title %}Sports{% endblock %}

{% block breadcrumb %}{% set breadcrumbItem = ['Activités', 'Sports']%}{% include 'components/dashboard/breadcrumb.html.twig' with breadcrumbItem %}{% endblock %}

{% block body %}
	<div class="flex flex-wrap items-center justify-between p-6 bg-white border border-gray-200 rounded-lg">
		<h1 class="text-2xl font-bold tracking-tight text-gray-900">Liste des sports</h5>
		<a href="{{ path('app_sport_new') }}" class="inline-flex items-center text-white focus:outline-none focus:ring-4 font-medium rounded-lg text-sm px-5 py-2.5 ml-auto bg-rose-600 hover:bg-rose-700 focus:ring-rose-700 border-rose-700 open-modal">
			<svg xmlns="http://www.w3.org/2000/svg" fill="none" viewbox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-4 h-4 mr-2 -ml-1">
				<path stroke-linecap="round" stroke-linejoin="round" d="M12 9v6m3-3H9m12 0a9 9 0 11-18 0 9 9 0 0118 0z"/>
			</svg>
			Ajouter un sport
		</a>
	</div>

    {% include '_partials/alert.html.twig' %}

	<div class="relative overflow-x-auto shadow-md sm:rounded-lg my-5">

		<table class="w-full text-sm text-left text-gray-500">
			<thead class="text-xs text-gray-700 uppercase bg-gray-50">
				<tr>
					<th scope="col" class="px-6 py-3">
						Nom
					</th>
					<th scope="col" class="px-6 py-3">
						Action
					</th>
				</tr>
			</thead>
			<tbody>
				{% for sport in sports %}
					<tr class="bg-white border-b hover:bg-gray-50">
						<th scope="row" class="flex items-center px-6 py-4 text-gray-900 whitespace-nowrap w-11/12">
							<img class="w-10 h-10 object-cover rounded-full " src="{{ asset('uploads/images/' ~ sport.imageUrl) }}" alt="Image représentant le sport {{sport.nom}}">
							<div class="pl-3">
								<div class="text-base font-semibold">{{ sport.nom }}</div>
							</div>  
						</th>
						<th scope="row" class="px-6 py-4 w-2/12">
							<div class="flex">
								<a href="{{ path('app_sport_show', {'id': sport.id}) }}" class="font-medium text-rose-500 hover:underline mr-4">
									<svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5">
										<path stroke-linecap="round" stroke-linejoin="round" d="M2.036 12.322a1.012 1.012 0 010-.639C3.423 7.51 7.36 4.5 12 4.5c4.638 0 8.573 3.007 9.963 7.178.07.207.07.431 0 .639C20.577 16.49 16.64 19.5 12 19.5c-4.638 0-8.573-3.007-9.963-7.178z" />
										<path stroke-linecap="round" stroke-linejoin="round" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
									</svg>
								</a>
								<a href="{{ path('app_sport_edit', {'id': sport.id}) }}" class="font-medium text-rose-500 hover:underline mr-4">
									<svg xmlns="http://www.w3.org/2000/svg" fill="none" viewbox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5">
										<path stroke-linecap="round" stroke-linejoin="round" d="M16.862 4.487l1.687-1.688a1.875 1.875 0 112.652 2.652L6.832 19.82a4.5 4.5 0 01-1.897 1.13l-2.685.8.8-2.685a4.5 4.5 0 011.13-1.897L16.863 4.487zm0 0L19.5 7.125"/>
									</svg>
								</a>

								{{ include('sport/_delete_form.html.twig') }}
							</div>
						</th>
					</tr>
				{% else %}
					<tr class="bg-white border-b hover:bg-gray-50">
						<td colspan="6" class="text-center py-4">Aucun sport</td>
					</tr>
				{% endfor %}
			</tbody>
		</table>
	</div>
{% endblock %}
